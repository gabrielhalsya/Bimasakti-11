@using LMM03700Common.DTO_s;
@inherits R_Page
@attribute [R_Page(Title="Assign Tenant")]

<R_StackLayout Row Style="width:600px">
    <R_ItemLayout col="12">
        <R_Grid @ref="@_Grid"
                DataSource="_viewModelTC.TenantToAssignList"
                Pageable
                R_ConductorGridSource="@_conTenantToAssignRef"
                R_GridType="@R_eGridType.Batch"
                AllowAddNewRow="false"
                AllowEditRow="false"
                AllowDeleteRow="false"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync">
            <R_GridColumns>
                <R_GridCheckBoxSelectColumn FieldName="@nameof(SelectedTenantGridPopupDTO.LSELECTED)"
                                                                R_EnableAdd
                                                                R_EnableEdit
                                                                ShowSelectAllHeader Width="100px" />
                <R_GridTextColumn FieldName="@nameof(TenantGridPopupDTO.CTENANT_ID)" HeaderText="Tenant Id" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantGridPopupDTO.CTENANT_NAME)" HeaderText="Tenant Name" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantGridPopupDTO.CTENANT_CATEGORY_NAME)" HeaderText="Tenant Category" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantGridPopupDTO.CTENANT_TYPE_NAME)" HeaderText="Tenant Type" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantGridPopupDTO.CPHONE)" HeaderText="Phone 1" Width="150px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantGridPopupDTO.CEMAIL)" HeaderText="Email" Width="200px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
        <R_StackLayout Row Class="justify-content-end">
            <R_ItemLayout col="2">
                <R_Button OnClick="Button_OnClickOkAsync">
                    Process
                </R_Button>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_Button OnClick="Button_OnClickCloseAsync">
                    Cancel
                </R_Button>
            </R_ItemLayout>
        </R_StackLayout>
        <R_ConductorGrid @ref="@_conTenantToAssignRef"
                         R_ViewModel="@_viewModelTC"
                              R_IsHeader
                         R_BeforeSaveBatch="@R_BeforeSaveBatch"
                         R_ServiceSaveBatch="@R_ServiceSaveBatchAsync"
                         R_AfterSaveBatch="@R_AfterSaveBatch" />
    </R_ItemLayout>
</R_StackLayout>
