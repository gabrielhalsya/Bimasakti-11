@page "/LMM04500"
@using LMM04500COMMON
@using LMM04500COMMON.DTO_s
@inherits R_Page

<R_StackLayout Class="my-2" Row>
    <R_ItemLayout col="1">
        <R_Label FontStyle="R_eFontStyle.Bold" FontColor="R_eFontColor.Danger">PROPERTY</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_ComboBox Data="@_viewModelPricing._propertyList"
                    Value="@_viewModelPricing._pricingParam.CPROPERTY_ID"
                    ValueField="@nameof(PropertyDTO.CPROPERTY_ID)"
                    TextField="@nameof(PropertyDTO.CPROPERTY_NAME)"
                    ValueChanged="@((string value) => ComboboxPropertyValueChanged(value))"
                    Enabled="@_comboboxPropertyEnabled">
        </R_ComboBox>
    </R_ItemLayout>
</R_StackLayout>

<R_TabStrip @ref="_tabStripPricing" OnActiveTabIndexChanging="@OnActiveTabIndexChanging">
    <R_TabStripTab Title="Current Pricing" id="TGC">
        <R_StackLayout Row>
            <R_ItemLayout col="3" Class="mt-0">
                <R_Grid @ref="@_gridUnitTypeCTG"
                        DataSource="@_viewModelPricing._unitTypeCategoryList"
                        R_ConductorSource="@_conUnitTypeCTG"
                        R_GridType="@R_eGridType.Navigator"
                        R_ServiceGetListRecord="@UnitTypeCTG_ServiceGetListRecord"
                        AllowAddNewRow="false"
                        AllowDeleteRow="false"
                        AllowEditRow="false"
                        Height="520px">
                    <R_GridColumns>
                        <R_GridTextColumn Filterable="false" FieldName="@nameof(UnitTypeCategoryDTO.CUNIT_TYPE_CATEGORY_NAME)" HeaderText="Tenant Classification Group" Width="300px"></R_GridTextColumn>
                    </R_GridColumns>
                </R_Grid>
            </R_ItemLayout>

            <R_ItemLayout col="9" Class="ms-4 mt-0">
                @*  <R_Grid @ref="_gridTenantClassRef"
                DataSource="@_viewModelTenantClass.TenantClassList"
                R_ConductorGridSource="_conTenantClassRef"
                Pageable="true"
                R_GridType="R_eGridType.Original"
                AllowAddNewRow="true"
                AllowDeleteRow="true"
                AllowEditRow="true"
                R_ServiceGetListRecord="TenantClass_ServiceGetListRecord"
                Height="300px">
                <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(TenantClassificationDTO.CTENANT_CLASSIFICATION_ID)" HeaderText="Tenant Classification Id" R_EnableAdd Width="350px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantClassificationDTO.CTENANT_CLASSIFICATION_NAME)" HeaderText="Tenant Classification Name" R_EnableAdd R_EnableEdit Width="450px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantClassificationDTO.CUPDATE_BY)" HeaderText="Updated By" Width="150px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantClassificationDTO.DUPDATE_DATE)" HeaderText="Updated Date" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantClassificationDTO.CCREATE_BY)" HeaderText="Created By" Width="150px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(TenantClassificationDTO.DCREATE_DATE)" HeaderText="Created Date" Width="200px"></R_GridTextColumn>
                </R_GridColumns>
                </R_Grid> *@
            </R_ItemLayout>
        </R_StackLayout>
    </R_TabStripTab>

    <R_TabStripTab Title="Next Pricing" Id="NP">
        <R_TabPage @ref="@_tabNextPricing"
                   R_Before_Open_TabPage="@BeforeOpenTabPage_NextPricing"
                   R_TabEventCallback="@TabEventCallback_NextPricing">
        </R_TabPage>
    </R_TabStripTab>
    <R_TabStripTab Title="History Pricing" Id="HP">
        <R_TabPage @ref="@_tabHistoryPricing"
                   R_Before_Open_TabPage="@BeforeOpenTabPage_HistoryPricing"
                   R_TabEventCallback="@TabEventCallback_HistoryPricing">
        </R_TabPage>
    </R_TabStripTab>
    <R_TabStripTab Title="Pricing Rate" Id="PR">
        <R_TabPage @ref="@_tabPricingRate"
                   R_Before_Open_TabPage="@BeforeOpenTabPage_PricingRate"
                   R_TabEventCallback="@TabEventCallback_PricingRate">
        </R_TabPage>
    </R_TabStripTab>
</R_TabStrip>

