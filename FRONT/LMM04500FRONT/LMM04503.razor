@inherits R_Page

<R_StackLayout Row Spacing="2" Class="mt-0">
     <R_ItemLayout col="3">
         <R_Grid @ref="@_gridPricingRateDate"
                 DataSource="@_viewModelPricing._unitTypeCategoryList"
                 R_ConductorSource="@_conPricingRateDate"
                 R_GridType="@R_eGridType.Navigator"
                 R_ServiceGetListRecord="@PricingRateDate_ServiceGetListRecord"
                 AllowAddNewRow="false"
                 AllowDeleteRow="false"
                 AllowEditRow="false"
                 Height="600px" 
                 Pageable="true">
             <R_GridColumns>
                 <R_GridTextColumn Filterable="false" FieldName="@nameof(UnitTypeCategoryDTO.CUNIT_TYPE_CATEGORY_NAME)" HeaderText=" Unit Type Category" Width="300px"></R_GridTextColumn>
             </R_GridColumns>
         </R_Grid>
     </R_ItemLayout>

     <R_ItemLayout col="9">
         <R_StackLayout Row Spacing="2" Class="my-3">
             <R_ItemLayout>
                 <R_Label>Valid From Date</R_Label>
             </R_ItemLayout>
             <R_ItemLayout col="3">
                 <R_TextBox @bind-Value="@_viewModelPricing._validDate"
                            Enabled="false"></R_TextBox>
             </R_ItemLayout>
             <R_ItemLayout Class="ms-4">
                 <R_Label>Valid ID</R_Label>
             </R_ItemLayout>
             <R_ItemLayout col="3">
                 <R_TextBox @bind-Value="@_viewModelPricing._validId"
                            Enabled="false"></R_TextBox>
             </R_ItemLayout>
         </R_StackLayout>

         <R_Grid @ref="_gridPricingRate"
                 DataSource="@_viewModelPricing._pricingList"
                 R_ConductorSource="_conPricingRate"
                 Pageable="true"
                 R_GridType="R_eGridType.Navigator"
                 AllowAddNewRow="false"
                 AllowDeleteRow="false"
                 AllowEditRow="false"
                 R_ServiceGetListRecord="PricingRate_ServiceGetListRecord"
                 Height="550px">
             <R_GridColumns>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.CCHARGES_TYPE)"
                                   HeaderText="Charge Type"
                                   Width="350px"></R_GridTextColumn>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.CCHARGES_ID)"
                                   HeaderText="Charge Id" Width="450px"></R_GridTextColumn>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.CPRICE_MODE_DESCR)"
                                   HeaderText="Price Mode"
                                   Width="450px"></R_GridTextColumn>
                 <R_GridNumericColumn FieldName="@nameof(PricingDTO.NNORMAL_PRICE)"
                                      HeaderText="Normal Price" Width="450px"></R_GridNumericColumn>
                 <R_GridNumericColumn FieldName="@nameof(PricingDTO.NBOTTOM_PRICE)"
                                      HeaderText="Bottom Price"
                                      Width="450px"></R_GridNumericColumn>
                 <R_GridCheckBoxColumn FieldName="@nameof(PricingDTO.LOVERWRITE)"
                                       HeaderText="Overwrite"
                                       Width="450px"></R_GridCheckBoxColumn>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.CUPDATE_BY)"
                                   HeaderText="Updated By"
                                   Width="200px"
                                   R_EnableAdd="false"
                                   R_EnableEdit="false"></R_GridTextColumn>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.DUPDATE_DATE)"
                                   HeaderText="Updated Date"
                                   Width="200px"
                                   R_EnableAdd="false"
                                   R_EnableEdit="false"></R_GridTextColumn>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.CCREATE_BY)"
                                   HeaderText="Created By"
                                   Width="200px"
                                   R_EnableAdd="false"
                                   R_EnableEdit="false"></R_GridTextColumn>
                 <R_GridTextColumn FieldName="@nameof(PricingDTO.DCREATE_DATE)"
                                   HeaderText="Created Date"
                                   Width="200px"
                                   R_EnableAdd="false"
                                   R_EnableEdit="false"></R_GridTextColumn>
             </R_GridColumns>
         </R_Grid>
     </R_ItemLayout>

     <R_Conductor @ref="@_conPricingRateDate"
                  R_IsHeader="true"
                  R_ViewModel="@_viewModelPricing"
                  R_ServiceGetRecord="@PricingRateDate_ServiceGetRecord"
                  R_Display="@PricingRateDate_ServiceDisplay">
     </R_Conductor>

     <R_Conductor @ref="@_conPricingRate"
                  R_ConductorParent="@_conPricingRateDate"
                  R_ViewModel="@_viewModelPricing"
                  R_ServiceGetRecord="@PricingRate_ServiceGetRecord"
                  R_Display="@CurrentPricing_Display">
     </R_Conductor>
 </R_StackLayout>
